<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Game"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            >

            <TextView
                android:id="@+id/p1"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player1"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/score1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/rnp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Round"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"

                android:layout_gravity="center_horizontal"
                >

                <ImageButton
                    android:id="@+id/stone1"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stone"
                    android:layout_marginLeft="16dp"
                    android:background="@android:color/holo_blue_light"
                    android:onClick="stone1"




                    />
                <ImageButton
                    android:id="@+id/paper1"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paper"
                    android:layout_marginLeft="16dp"
                    android:background="@android:color/holo_blue_light"
                    android:onClick="paper1"




                    />
                <ImageButton
                    android:id="@+id/scissor1"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scissors"
                    android:layout_marginLeft="16dp"
                    android:background="@android:color/holo_blue_light"
                    android:onClick="scissor1"



                    />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFA"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player2"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/score2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/rnp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Round"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                >

                <ImageButton
                    android:id="@+id/stone2"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stone"
                    android:layout_marginLeft="16dp"
                    android:clickable="false"

                    android:background="#FFA"




                    />
                <ImageButton
                    android:id="@+id/paper2"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paper"
                    android:layout_marginLeft="16dp"
                    android:clickable="false"


                    android:background="#FFA"




                    />
                <ImageButton
                    android:id="@+id/scissor2"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scissors"
                    android:layout_marginLeft="16dp"
                    android:clickable="false"


                    android:background="#FFA"




                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/decide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@android:color/holo_green_light">
        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/winner"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="test"
            />
        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/pp1"
            android:layout_alignTop="@id/winner"
            android:layout_centerHorizontal="true"
            android:text="Score1"
            android:layout_marginTop="32dp"
            />
        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/pp2"
            android:layout_alignTop="@id/pp1"
            android:layout_centerHorizontal="true"
            android:text="Score2"
            android:layout_marginTop="32dp"
            />
        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/out2"
            android:layout_alignBottom="@id/winner"
            android:layout_centerHorizontal="true"
            android:text="Player2"
            android:layout_marginBottom="32dp"
            />
        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/out1"
            android:layout_alignBottom="@id/out2"
            android:layout_centerHorizontal="true"
            android:text="Player1"
            android:layout_marginBottom="32dp"
            />
    </RelativeLayout>
</RelativeLayout>